{% extends 'baseAdmin.html.twig' %}

{% block title %}Hello CalendrierController!{% endblock %}

{% block body %}
    <html lang="fr">
    <head>
        <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/evo-calendar@1.1.0/evo-calendar/css/evo-calendar.min.css"/>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/evo-calendar@1.1.3/evo-calendar/css/evo-calendar.midnight-blue.css" integrity="sha256-mN3QrbLQ/DYJQQGu3Xx3ggFPPh0fySuP06ZiB5qmqTg=" crossorigin="anonymous">
