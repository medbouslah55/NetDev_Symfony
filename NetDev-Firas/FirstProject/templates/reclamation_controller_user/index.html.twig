{% extends 'base.html.twig' %}



{% block body %}
    <header class="header-bottom-4">
        <!--<img src="{{ asset('./images/ab1.png') }}">-->
        <div class="header-bottom-4__bg">
            <div class="icon">
                <img src="{{ asset('./images/banner/banner-shape.png') }}">
            </div>
        </div>
        <div class="container">
            <h1 class="section-title">Liste De Mes <span>Reclamations</span></h1>
            <ol class="breadcrumb">
            </ol>
        </div>
    </header>
    <table class="table">
        <thead>
            <tr>
                <th>Type</th>
                <th>Date</th>
                <th>Description</th>
                <th>Etat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reclamation in reclamations %}
            <tr>
                <td>{{ reclamation.type }}</td>
                <td>{{ reclamation.date ? reclamation.date|date('Y-m-d') : '' }}</td>
                <td>{{ reclamation.description }}</td>
                <td>{{ reclamation.etat }}</td>
                <td>
                    <a href="{{ path('reclamation_controller_user_show', {'id': reclamation.id}) }}">Afficher</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">Il y a aucune reclamation</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
