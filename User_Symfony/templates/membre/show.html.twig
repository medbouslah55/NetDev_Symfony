{% extends 'baseAdmin.html.twig' %}

{% block title %}Membre{% endblock %}

{% block body %}
    <main class="content">
        <div class="container-fluid p-0">

            <h1 class="h3 mb-3">Coach</h1>

            <div class="row">
                <div class="col-xl-4">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">{{ membre.prenom }}</h5>
                        </div>
                        <div class="card-body">
                            <div class="row no-gutters">
                                <div class="col-sm-3 col-xl-12 col-xxl-3 text-center">
                                    <img src="img/avatars/avatar-3.jpg" width="64" height="64" class="rounded-circle mt-2" alt="Angelica Ramos">
                                </div>
                                <div class="col-sm-9 col-xl-12 col-xxl-9">
                                    <strong>About me</strong>
                                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
                                </div>
                            </div>
                            <table class="table table-sm my-2">
                                <tbody>
                                <tr>
                                    <th>Cin</th>
                                    <td>{{ membre.cin }}</td>
                                </tr>
                                <tr>
                                    <th>Nom</th>
                                    <td>{{ membre.nom }}</td>
                                </tr>
                                <tr>
                                    <th>Prenom</th>
                                    <td>{{ membre.prenom }}</td>
                                </tr>
                                <tr>
                                    <th>Sexe</th>
                                    <td>{{ membre.sexe }}</td>
                                </tr>
                                <tr>
                                    <th>Datee</th>
                                    <td>{{ membre.datee ? membre.datee|date('Y-m-d') : '' }}</td>
                                </tr>
                                <tr>
                                    <th>Taille</th>
                                    <td>{{ membre.taille }}</td>
                                </tr>
                                <tr>
                                    <th>Poids</th>
                                    <td>{{ membre.poids }}</td>
                                </tr>
                                <tr>
                                    <th>Email</th>
                                    <td>{{ membre.email }}</td>
                                </tr>
                                <tr>
                                    <th>Password</th>
                                    <td>{{ membre.password }}</td>
                                </tr>
                                <tr>
                                    <th>Telephone</th>
                                    <td>{{ membre.telephone }}</td>
                                </tr>
                                </tbody>
                            </table>

                            <hr />
                            <a href="{{ path('membre_index') }}" class="btn btn-secondary">back to list</a>
                            <span>
                        <a href="{{ path('membre_edit', {'cin': membre.cin}) }}" class="btn btn-danger">edit</a>
                        {{ include('membre/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>






{% endblock %}
