{% extends 'baseAdmin.html.twig' %}

{% block title %}Nos Regimes{% endblock %}
{% block body %}
<div class="container mt-4">
    <h1>Liste de Nos Regimes:</h1>
    <div class="row">
        {% for regime in pagination %}
            <div class="col-md-4 mt-2">
                <div class="card bg light mb-3">
                    <div class="card header text-center">
                        <strong>{{ regime.type }}</strong> <br>
                        <small>Pas encore noté</small>
                        <a href="{{ path('regime_edit', {'id': regime.id}) }}">
                            <img src="/admin/img/regime/{{regime.image}}" alt="Image du Regime" style = "height: 300px; width: 100%; display: block">
                        </a>
                        <div class="card-body">
                            <h4 class="card-title">
                                <a href="{{ path('regime_edit', {'id': regime.id}) }}">
                                    {{ regime.description }}
                                </a>
                            </h4>
                            <p class="card-text">
                                
                            </p>
                            <a href="{{ path('regime_edit', {'id': regime.id}) }}" class="btn btn-primary">
                                <i class="align-middle" data-feather="edit"></i><span class="align-middle"> Modifier</span></a>
                            <a href="{{ path('regime_delete', {'id': regime.id}) }}" class="btn btn-danger", onclick="return confirm('Vous êtes sur de supprimer {{ regime.type }}?');">
                            <i class="align-middle" data-feather="delete"></i><span class="align-middle"> Supprimer</span></a>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
    <div class="d-flex justify-content-center">
        {{ knp_pagination_render(pagination) }}
    </div>
</div>
{% endblock %}
