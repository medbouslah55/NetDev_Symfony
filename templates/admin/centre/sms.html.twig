    <form action="{{path('sms') }}" method="GET">
        <label for="nom">Nom Centre</label>
        <input class="form-control" type="text" id="nom" name="nom"  value="{{ centre.nomCentre }}" readonly><br>

        <label for="tel">Num√©ro centre</label>
        <input class="form-control" type="text" id="tel" name="tel"  value="{{ centre.telCentre }}" readonly><br>
        
        <label for="msg">Message</label>
        <textarea  class="form-control" id="msg" name="msg" placeholder="Veuillez saisir votre message.." style="height:200px"></textarea>
        <input class="btn btn-success" type="submit" value="Envoyer SMS" />
    </form>
