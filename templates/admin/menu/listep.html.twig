<div class="container mt-4">
    <h1>Liste de Nos Menus:</h1>
    <div class="row">
        {% for menu in menus %}
            <div class="col-md-4 mt-2">
                <div class="card bg light mb-3">
                    <div class="card header text-center">
                        <strong>{{ menu.description }}</strong> <br>
                        <small>Menu Jour N°{{menu.numJour}}</small>
                        <a href="{{ path('menu_edit', {'id': menu.idMenu}) }}">
                            <div class="bd-example">
                                <div id="carouselExampleCaptions{{menu.idMenu}}" class="carousel slide" data-ride="carousel">
                                    <ol class="carousel-indicators">
                                    </ol>
                                    <div class="carousel-inner">
                                    <div class="carousel-item active">
                                        <img class="d-block w-100" src="/admin/img/menu/{{menu.matinImg}}" style = "height: 300px; width: 100%; display: block">
                                        <div class="carousel-caption d-none d-md-block">
                                        <h4 class="mt-5" style="color:black">Matin: {{menu.matin}}</h4>
                                        <p></p>
                                        </div>
                                    </div>
                                    <div class="carousel-item">
                                        <img class="d-block w-100" src="/admin/img/menu/{{menu.dejeunerImg}}" style = "height: 300px; width: 100%; display: block">
                                        <div class="carousel-caption d-none d-md-block">
                                        <h4 class="mt-5" style="color:black">Déjeuner: {{menu.dejeuner}}</h4>
                                        </div>
                                    </div>
                                    <div class="carousel-item">
                                        <img class="d-block w-100" src="/admin/img/menu/{{menu.dinnerImg}}" style = "height: 300px; width: 100%; display: block">
                                        <div class="carousel-caption d-none d-md-block">
                                        <h4 class="mt-5" style="color:black">Dinner: {{menu.dinner}}</h4>
                                        </div>
                                    </div>
                                    </div>
                                    <a class="carousel-control-prev" href="#carouselExampleCaptions{{menu.idMenu}}" role="button" data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                    </a>
                                    <a class="carousel-control-next" href="#carouselExampleCaptions{{menu.idMenu}}" role="button" data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                    </a>
                                </div>
                            </div>
                        </a>
                        <div class="card-body">
                            <h4 class="card-title">
                                <a href="{{ path('menu_edit', {'id': menu.idMenu}) }}">
                                    Total Calories: {{ menu.totalCalories }}
                                </a>
                            </h4>
                            <p class="card-text">
                                
                            </p>
                            <a href="{{ path('menu_edit', {'id': menu.idMenu}) }}" class="btn btn-primary">
                                <i class="align-middle" data-feather="edit"></i><span class="align-middle"> Modifier</span></a>
                            <a href="{{ path('menu_delete', {'id': menu.idMenu}) }}" class="btn btn-danger", onclick="return confirm('Vous êtes sur de supprimer {{ menu.description }}?');">
                            <i class="align-middle" data-feather="delete"></i><span class="align-middle"> Supprimer</span></a>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>