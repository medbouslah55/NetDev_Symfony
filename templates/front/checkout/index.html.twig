{% extends "base.html.twig" %}

{% block body %}
    <!-- Start of .shop -->
    <section class="shop main-blog">
        <div class="main-blog__bg">
            <div class="icon">
                <img src="./images/png-shapes/form-shape.png">
            </div>
            <div class="icon">
                <img src="./images/png-shapes/specialists__left-bottom-shape.png">
            </div>
        </div>
        <form class="shop-checkout container container_right-sidebar" method="post" action="checkout">

            <div class="sidebar">
                <div class="checkout-sidebar">
                    <h1 class="title">Your Order</h1>
                    <div>
                        <div class="yourOrder">
                            <div class="product">
                                <span>Product</span>
                                <span>Nombre</span>
                                <span>Total</span>
                            </div>
                            <table>
                                <tr>
                                    <th>{{ nomAct }} </th>
                                    <th>{{ nbPlace }} </th>
                                    <td>$<span>{{ price }}</span></td>
                                </tr>
                                <tr>
                                    <th>
                                        <br>
                                    </th>
                                </tr>
                            </table>
                            <div class="total">
                                <span>Total</span>
                                <span>$<span>{{ nbPlace * price }}</span></span>
                            </div>
                        </div>
                        <div class="radioBoxes">
                            <table>
                                <tr>
                                    <td>
                                        <input type="radio" name="shipping" id="cashOnDelivery" hidden>
                                        <label for="cashOnDelivery">
                                            <span class="dot"></span>
                                            <span class="text">Cash on delivery</span>
                                            <span class="subtext">Pay with cash upon delivery</span>
                                        </label>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <input type="radio" name="shipping" id="paypal" hidden>
                                        <label for="paypal">
                                            <span class="dot"></span>
                                            <span class="text">Paypal</span>
                                        </label>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <input type="radio" name="shipping" id="direct" hidden>
                                        <label for="direct">
                                            <span class="dot"></span>
                                            <span class="text">Direct bank transfer</span>
                                        </label>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <input type="radio" name="shipping" id="cheque" hidden>
                                        <label for="cheque">
                                            <span class="dot"></span>
                                            <span class="text">Cheque payment</span>
                                        </label>
                                    </td>
                                </tr>
                            </table>

                            <div class="chek-term-condition">
                                <input type="checkbox" id="chekTermCondition" hidden>
                                <label for="chekTermCondition">
                                    <div class="icon">
                                        <i class="fa fa-check"></i>
                                    </div>
                                    <span>I've read and accept the <a href="#">term &
                                                condition<span>*</span></a></span>
                                </label>
                            </div>
                            <button type="submit" href="{{ path('checkout') }}">place order</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </section>
    <!-- End of .shop -->
{% endblock %}

